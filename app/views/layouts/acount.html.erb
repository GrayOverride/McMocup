<!DOCTYPE html>
<html>
<head>
	<title>Mockup</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div id="acount-wrapper" class="wrapper">
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span12 nav">
					<div class="span2 offset1">logo</div>
					<div class="span5">
						<ul class="navigation">
							<li><a href="" >Terms of use</a></li>
							<li><a href="" >About us</a></li>
							<li><a href="" >Privacy</a></li>
							<div class="clear"></div>
						</ul>
					</div>
					<div class="span1 offset3">
						<div class="btn" style="background:#4fc1e9;">
							<% if current_user %>
							<%= link_to 'Logout', log_out_path%>
							<% else %>
							<%= link_to 'Login', log_in_path%>
							<% end %>
						</div>
					</div>
				</div>
			</div>
			<div class="row-fluid">
				<div id="searchDiv" style="display:none;" class="span12 nav search answer_list">
					<div class="span1"></div>
					<div class="span10" name="answer" value="Hide Div" onclick="hideDiv()">Leta efter shit</div>
					<div class="span1"></div>
				</div>
			</div>
		</div>

		<div class="row-fluid">
			<div class="span4"></div>
			<div class="span4 loginbox">
				<%= yield %>
			</div>
			<div class="span4"></div>

		</div>

	</div>
		<div class="push"></div>
	</div>
	<div class="footer footnote">
		<p>Copyright (c) 2013</p>
	</div>
</body>
</html>

