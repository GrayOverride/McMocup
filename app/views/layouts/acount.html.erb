<!DOCTYPE html>
<html>
<head>
	<title>Mockup</title>
	<%= stylesheet_link_tag    "application", media: "all"%>
	<%= javascript_include_tag "application"%>
	<%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
	<div id="acount-wrapper" class="wrapper">
		<div class="container-fluid">
			<div class="row-fluid">
				<div class="span12 nav">
					<div class="span2 offset1">logo</div>
					<div class="span6">
						<ul class="navigation">
							<li><%= link_to "Start", root_url %></li>
							<li><%= link_to "Register", register_path %></li>
							<li><%= link_to "Login", register_path %></li>
							<li><%= link_to "Terms of use", static_terms_path %></li>
							<li><%= link_to "Privacy policy", static_privacy_path %></li>
							<li><%= link_to "About Us", static_about_path %></li>
							<div class="clear"></div>
						</ul>
					</div>
					<div class="span1 offset2">

					</div>
				</div>
			</div>
			<div class="row-fluid">
				<div id="searchDiv" style="display:none;" class="span12 nav search answer_list">
					<div class="span1"></div>
					<div class="span10" name="answer" value="Hide Div" onclick="hideDiv()">Leta efter shit</div>
					<div class="span1"></div>
				</div>
			</div>
		</div>

		<div class="row-fluid">
			<div class="span4"></div>
			<div class="span4 loginbox">
				<%= yield %>
			</div>
			<div class="span4"></div>

		</div>

	</div>
		<div class="push"></div>
	</div>
	<div class="footer footnote">
		<p>Copyright (c) 2013</p>
	</div>
</body>
</html>

