
<div class="span2"></div>
<div class="span8">
	<%= form_tag(log_in_path, :method => :post) do %>
		<%= text_field_tag :username, params[:username], :placeholder=>'Username', :class=>'span12' %></br></br>
		<%= password_field_tag :password, nil, :placeholder=>'Password', :class=>'span12' %></br></br>
		<%= submit_tag "Login" , class: "ssubmit span12" %>
	</br>
	<% end %>

	<% if flash[:notice] %>
		<%= flash[:notice] %>
	<% end %>

	<p>Not a member? <%= link_to 'sign up now', register_path%></a>.</p>
</div>
<div class="span2"></div>
