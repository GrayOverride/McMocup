<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div>
      <h2><%= pluralize(@article.errors.count, "error") %> prevented this article from being saved</h2>

      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.text_field :title, :placeholder=>'Title' %>
    <%= f.text_area :content, :placeholder=>'Content', :class=>'span12' %>
    <%= f.select :type, [['Type', nil], ['DIY', 'Do-It-Yourself'], ['Commercial', 'Commercial'], ['Research', 'Research']]  %>
    <%= f.select :method, [['Method', nil], ['Drying', 'Drying'], ['Steaming/Boiling', 'Steaming/Boiling'], ['Heating', 'Heating'], ['Cooling', 'Cooling'], ['Electricity', 'Electricity']]  %>
    <%= f.select :produce, [['Produce', nil], ['Metalwork', 'Metalwork'], ['Agriculture', 'Agriculture'], ['Food processing', 'Food Processing'], ['Textile', 'Textile'], ['Leather', 'Leather'], ['Salt', 'Salt'], ['Tourism', 'Tourism']]  %>
    <%= f.submit "Publish" %>
<% end %>
