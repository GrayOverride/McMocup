<div class="span12">
  <h1>Articles</h1>

  <table class="table">
    <th><%= sortable "title","Title" %></th>
    <th><%= sortable "created_at", "Created" %></th>
    
    <% @articles.each do |article| %>
      <tr>
        <td><h3><%= link_to article.title, article %></h3></td>
        <td><%= article.created_at.strftime("%d %b. %Y") %></td>
      </tr>
    <% end %>
  </table>
</div>
