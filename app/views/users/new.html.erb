<div class="span2"></div>
<div class="span8">
<%= form_for(@user) do |f| %>
	<%= f.text_field :email, :placeholder=>'Email', :class=>'span12'  %></br></br>
	<%= f.text_field :username, :placeholder=>'Username', :class=>'span12'  %></br></br>
	<%= f.password_field :password, :placeholder=>'Password', :class=>'span12'  %></br></br>
	<%= f.submit "Register" , class: "ssubmit span12"  %>
<% end %>
</div>
<div class="span2"></div>


<div class="row-fluid">
	<div class="span12">
<% if @user.errors.any? %>
	<div>
			<% for message in @user.errors.full_messages %>
				<div class="text-error"><%= message %></div></br>
			<% end %>
	</div>
<% end %>
</div>
</div>
