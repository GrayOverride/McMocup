<h2>Register</h2>
<% if @user.errors.any? %>
	<div>
		<ul class="unstyled">
			<% for message in @user.errors.full_messages %>
				<li class="text-error"><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<%= form_for(@user) do |f| %>
	<%= f.text_field :email, :placeholder=>'Email' %>
	<%= f.text_field :username, :placeholder=>'Username' %>
	<%= f.password_field :password, :placeholder=>'Password' %>
	<%= f.submit "Register" %>
<% end %>